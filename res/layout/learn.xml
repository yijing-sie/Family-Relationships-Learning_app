<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/tree"
        android:alpha="0.3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/tree"
        />

    <TextView
        android:id="@+id/overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/Howtolearn"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />
    <Button
        android:id="@+id/buttonHenry"
        android:layout_below="@id/overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="Henry" />
    <View
        android:id="@+id/view1"
        android:layout_width="@dimen/line_thickness"
        android:layout_height="74dp"
        android:layout_below="@+id/buttonHenry"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-3dp"
        android:background="@color/colorPrimary" />
    <View
        android:id="@+id/view2"
        android:layout_width="40dp"
        android:layout_height="@dimen/line_thickness"
        android:layout_below="@+id/view1"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary" />
        <View
            android:id="@+id/view3"
            android:layout_width="16dp"
            android:layout_height="@dimen/line_thickness"
            android:layout_alignTop="@id/view2"
            android:layout_toRightOf="@id/buttonJames"
            android:layout_marginLeft="-3dp"
            android:background="@color/colorPrimary" />

        <Button
            android:id="@+id/buttonJames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignTop="@id/view3"
            android:layout_marginTop="-20dp"
            android:text="James"
            android:textStyle="bold" />


        <Button
            android:id="@+id/buttonSusan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/buttonJames"
            android:layout_marginStart="-6dp"
            android:layout_marginLeft="-6dp"
            android:layout_toRightOf="@id/view3"
            android:text="Susan"
            android:textStyle="bold" />
    <View
        android:id="@+id/view4"
        android:layout_width="16dp"
        android:layout_height="@dimen/line_thickness"
        android:layout_alignTop="@id/view2"
        android:layout_marginRight="-4dp"
        android:layout_toLeftOf="@id/buttonSarah"
        android:background="@color/colorPrimary" />

    <Button
        android:id="@+id/buttonAndrew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonJames"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/buttonSarah"
        android:textStyle="bold"
        android:text="Andrew" />


    <Button
        android:id="@+id/buttonSarah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonJames"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:text="Sarah" />

    <Button
        android:id="@+id/buttonOliver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/view6"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="-20dp"
        android:textStyle="bold"
        android:text="Oliver" />
    <View
        android:id="@+id/view5"
        android:layout_width="@dimen/line_thickness"
        android:layout_height="100dp"
        android:layout_below="@id/view3"
        android:layout_marginLeft="92.5dp"
        android:background="@color/colorPrimary" />

    <Button
        android:id="@+id/buttonEmma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonOliver"
        android:layout_alignRight="@+id/buttonSusan"
        android:textStyle="bold"
        android:text="Emma" />
    <View
        android:id="@+id/view6"
        android:layout_width="16dp"
        android:layout_height="@dimen/line_thickness"
        android:layout_below="@id/view5"
        android:layout_alignLeft="@id/view3"
        android:background="@color/colorPrimary" />

    <Button
        android:id="@+id/buttonMichael"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonOliver"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:textStyle="bold"
        android:text="Michael" />
    <View
        android:id="@+id/view7"
        android:layout_width="@dimen/line_thickness"
        android:layout_height="100dp"
        android:layout_below="@id/view4"
        android:layout_alignParentRight="true"
        android:layout_marginRight="91dp"
        android:background="@color/colorPrimary" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button_margin"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="GO TO TEST" />
    </RelativeLayout>
</LinearLayout>